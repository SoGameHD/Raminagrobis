<Page x:Class="Raminagrobis.WPF.LignesAdherents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LignesAdherents">

    <Grid>
        <TextBlock Text="Page LignesAdherents" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32px" Margin="248,33,239,373.6"/>
        <ListView Name="lvLigneAdherents" Margin="323,120,22,128.6" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID_ligne_global" Width="80" DisplayMemberBinding="{Binding ID_ligne_global}" />
                    <GridViewColumn Header="Quantite" Width="60" DisplayMemberBinding="{Binding Quantite}" />
                    <GridViewColumn Header="ID_produit" Width="60" DisplayMemberBinding="{Binding ID_produit}" />
                    <GridViewColumn Header="ID_commande" Width="60" DisplayMemberBinding="{Binding ID_commande}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Afficher Liste" Margin="524,351,155,71.6" Click="BtnGetAll"/>
    </Grid>
</Page>