<Page x:Class="Raminagrobis.WPF.Proposition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Proposition">

    <Grid>
        <TextBlock Text="Page Proposition" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32px" Margin="273,36,287,370.6"/>
        <ListView Name="lvProposition" Margin="323,120,22,128.6" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Prix " Width="80" DisplayMemberBinding="{Binding Prix }" />
                    <GridViewColumn Header="ID_ligne_global" Width="60" DisplayMemberBinding="{Binding ID_ligne_global}" />
                    <GridViewColumn Header="ID_fournisseur" Width="60" DisplayMemberBinding="{Binding ID_fournisseur}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Afficher Liste" Margin="524,349,141,71.6" Click="BtnListe"/>
    </Grid>
</Page>